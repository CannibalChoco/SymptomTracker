<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="DialogFragmentWithTitle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="ButtonSeverityStyle">
        <item name="android:layout_width">@dimen/btn_severity_dimension</item>
        <item name="android:layout_height">@dimen/btn_severity_dimension</item>
        <item name="android:layout_margin">@dimen/btn_severity_margin</item>
        <item name="android:background">@drawable/button_severity</item>
        <item name="android:textColor">@color/button_severity_text_color</item>
    </style>

    <style name="WidgetListItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/default_no_info</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CardTitleTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/mediumEmphasisText</item>
        <item name="android:textSize">@dimen/cardTitle</item>
    </style>

    <style name="ResolvedPrimaryTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mediumEmphasisText</item>
        <item name="android:textSize">@dimen/cardTitle</item>
    </style>

    <style name="ResolvedSecondaryTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/disabledText</item>
        <item name="android:textSize">@dimen/resolved_text_size_secondary</item>
    </style>

    <style name="CardTitleDividerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/amber</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
    </style>
</resources>
