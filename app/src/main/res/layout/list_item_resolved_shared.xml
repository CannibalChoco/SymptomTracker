<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="@dimen/resolved_item_height"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/resolvedName"
        style="@style/ResolvedPrimaryTextStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Headache"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/hint_symptom_name"
        android:textSize="@dimen/resolved_text_size_primary" />

    <TextView
        android:id="@+id/labelResolvedSince"
        style="@style/ResolvedSecondaryTextStyle"
        app:layout_constraintBottom_toTopOf="@+id/textResolvedSince"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/secondary_item_padding"
        android:text="@string/label_resolved_since" />

    <TextView
        android:id="@+id/textResolvedSince"
        style="@style/ResolvedSecondaryTextStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelResolvedSince"
        tools:text="10/03/2018"
        android:paddingBottom="@dimen/secondary_item_padding" />

</android.support.constraint.ConstraintLayout>