<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/todaySymptom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Symptom name" />

        <HorizontalScrollView
            android:id="@+id/scrollSeverity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:fadeScrollbars="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/todaySymptom"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/severity0"
                    android:layout_width="@dimen/btn_severity_dimension"
                    android:layout_height="@dimen/btn_severity_dimension"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_severity"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/severity_00"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/severity1"
                    android:layout_width="@dimen/btn_severity_dimension"
                    android:layout_height="@dimen/btn_severity_dimension"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_severity_default"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/severity_1"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/severity2"
                    android:layout_width="@dimen/btn_severity_dimension"
                    android:layout_height="@dimen/btn_severity_dimension"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_severity_default"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/severity_2"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/severity3"
                    android:layout_width="@dimen/btn_severity_dimension"
                    android:layout_height="@dimen/btn_severity_dimension"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_severity_default"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/severity_3"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/severity4"
                    android:layout_width="@dimen/btn_severity_dimension"
                    android:layout_height="@dimen/btn_severity_dimension"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_severity_default"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/severity_4"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/severity5"
                    android:layout_width="@dimen/btn_severity_dimension"
                    android:layout_height="@dimen/btn_severity_dimension"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_severity_default"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/severity_5"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/severity6"
                    android:layout_width="@dimen/btn_severity_dimension"
                    android:layout_height="@dimen/btn_severity_dimension"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_severity_default"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/severity_6"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/severity7"
                    android:layout_width="@dimen/btn_severity_dimension"
                    android:layout_height="@dimen/btn_severity_dimension"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_severity_default"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/severity_7"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/severity8"
                    android:layout_width="@dimen/btn_severity_dimension"
                    android:layout_height="@dimen/btn_severity_dimension"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_severity_default"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/severity_8"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/severity9"
                    android:layout_width="@dimen/btn_severity_dimension"
                    android:layout_height="@dimen/btn_severity_dimension"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_severity_default"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/severity_9"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/severity10"
                    android:layout_width="@dimen/btn_severity_dimension"
                    android:layout_height="@dimen/btn_severity_dimension"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_severity_default"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/severity_10"
                    android:textSize="18sp" />

            </LinearLayout>

        </HorizontalScrollView>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>