<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/widget_text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Some symptom"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <TextView
            android:id="@+id/widget_day_1"
            style="@style/WidgetListItemStyle"/>

        <TextView
            android:id="@+id/widget_day_2"
            style="@style/WidgetListItemStyle"/>

        <TextView
            android:id="@+id/widget_day_3"
            style="@style/WidgetListItemStyle"/>

        <TextView
            android:id="@+id/widget_day_4"
            style="@style/WidgetListItemStyle"/>

        <TextView
            android:id="@+id/widget_day_5"
            style="@style/WidgetListItemStyle"/>

        <TextView
            android:id="@+id/widget_day_6"
            style="@style/WidgetListItemStyle"/>

        <TextView
            android:id="@+id/widget_day_7"
            style="@style/WidgetListItemStyle"/>

    </LinearLayout>

</LinearLayout>